                deleniti necessitatibus quo quae.
            </p>
        </div>

        <div class="grid w-full gap-4 lg:grid-cols-2">
            {
                benefitList.map(({ icon, title, description }, index) => (
                    <Card
                        key={title}
                        className="bg-trancperent card dark:bg-card hover:bg-med-yellow transition-all delay-75 group/number"
                    >
                        <CardHeader>
                            <div class="flex justify-between">
                                <Icon
                                    name={icon as keyof typeof icons}
                                    size={32}
                                    color="hsl(var(--primary))"
                                    className="mb-6 text-primary"
                                />
                                <span class="text-foreground/15 group-hover/number:text-foreground/30 text-5xl font-medium transition-all delay-75">
                                    0{index + 1}
                                </span>
                            </div>

                            <CardTitle>{title}</CardTitle>
                        </CardHeader>

                        <CardContent className="text-med-foreground">
                            {description}
                        </CardContent>
                    </Card>
                ))
            }
        </div>
